<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">


    <include layout="@layout/sign_line_view"></include>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="12dp"
        >
   <!--     fresco:actualImageScaleType="fill"-->

        <TextView
            android:layout_toLeftOf="@+id/time"
            android:id="@+id/title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="财经贸易"
          android:maxLines="2"
            android:ellipsize="end"
            android:textSize="12sp"
            style="@style/_black_font_16sp"
            android:layout_toRightOf="@+id/pic"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="2dp"
            />
        <TextView
            android:maxLines="2"
            android:id="@+id/time"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="15:36"
            android:textSize="7sp"
            style="@style/_999999_font_12sp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="2dp"
            />
        <TextView
            android:textSize="11sp"
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="就分手了费劲记录时间粉丝交流交流十分据了解了解了解据了解了解据了解了解交流交流"
            android:layout_toRightOf="@+id/pic"
            android:layout_below="@+id/title1"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="12dp"
            style="@style/_666666_font_14sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:maxEms="60"
            />

        <ImageView
           android:id="@+id/pic"
           android:layout_width="60dp"
           android:layout_height="65dp"
          android:background="@mipmap/bai_homepage_finance"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:layout_marginLeft="5dp"
            android:padding="2dp"
            android:textColor="@color/home_color"
            android:text="删除"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/content"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/tv_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:text="评论新闻数量"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/content"
            style="@style/_666666_font_11sp"
            android:visibility="gone"
            />

        <LinearLayout
            android:id="@+id/ll_pinglun_number"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:paddingTop="5dp"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:layout_below="@+id/content"
            android:visibility="gone"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/bai_comment"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                />
            <TextView
                android:id="@+id/tv_comment_number"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="10条评论"
                style="@style/_666666_font_12sp"
                android:gravity="center_vertical"
                />

        </LinearLayout>

    </RelativeLayout>
</LinearLayout>
