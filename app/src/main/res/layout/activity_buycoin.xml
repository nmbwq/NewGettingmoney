<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <include layout="@layout/head_item"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/beijing"/>




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/text_black"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:text="有财币"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/text_999"
        android:layout_marginTop="9dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="10dp"
        android:text="用于有财路模拟账户资金充值"/>
    <include layout="@layout/fengexian"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="1dp"
        android:background="@drawable/selector_layout"
        android:orientation="horizontal"
        android:layout_height="57dp">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="14dp"
            android:src="@mipmap/bi"/>

        <LinearLayout
            android:id="@+id/chosemonth"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="14dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/ten"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:textSize="12sp"
                android:layout_weight="1"
                android:gravity="center"

                android:layout_marginRight="5dp"
                android:textColor="@color/home_color"
                android:background="@drawable/bichose_shape"
                android:layout_gravity="center_vertical"

                android:text="10万"/>
            <TextView
                android:id="@+id/fifteen"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:textSize="12sp"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/text_black"
                android:background="@drawable/gray_shape"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="50万"/>
            <TextView
                android:id="@+id/onehuandryd"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:textSize="12sp"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/text_black"
                android:background="@drawable/gray_shape"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="100万"/>
            <TextView
                android:id="@+id/fivehandryd"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:textSize="12sp"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/text_black"
                android:background="@drawable/gray_shape"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:text="500万"/>
        </LinearLayout>

    </LinearLayout>
    <include layout="@layout/fengexian"/>

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_marginTop="1dp"
        android:background="@drawable/selector_layout"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/money_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:src="@mipmap/money"/>

        <TextView
            android:id="@+id/needmoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/home_color"
            android:layout_marginLeft="14dp"
            android:layout_toRightOf="@id/money_img"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:text="0 元"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/text_999"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            android:text="实际支付金额"/>
    </RelativeLayout>
    <include layout="@layout/fengexian"/>

    <TextView
        android:id="@+id/chongzhi_btn"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:textSize="18sp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="30dp"
        android:textColor="@color/white"
        android:background="@drawable/red_shape"
        android:gravity="center"
        android:text="立即充值"/>
</LinearLayout>
