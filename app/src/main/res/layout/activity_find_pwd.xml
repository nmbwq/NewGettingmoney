<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <include layout="@layout/head_item"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/beijing"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edito_layout"
                android:layout_marginTop="14dp"
                android:layout_marginRight="14dp"
                android:layout_marginLeft="14dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/find_phone"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginLeft="26dp"
                    android:inputType="phone"
                    android:textSize="14sp"
                    android:textColorHint="@color/hint_color"
                    android:hint="请输入您的手机号码"
                    android:textCursorDrawable="@null"
                    android:background="@null"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginRight="26dp"
                    android:layout_marginLeft="26dp"
                    android:background="@color/text_gray"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginRight="26dp"
                    android:orientation="horizontal">
                    <EditText
                        android:id="@+id/find_code"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:inputType="number"
                        android:textSize="14sp"
                        android:layout_marginLeft="26dp"
                        android:textColorHint="@color/hint_color"
                        android:textCursorDrawable="@null"
                        android:hint="验证码"
                        android:background="@null"/>
                    <TextView
                        android:id="@+id/find_getcode"
                        android:layout_width="80dp"
                        android:layout_margin="5dp"
                        android:layout_height="match_parent"
                        android:textSize="11sp"

                        android:textColor="@android:color/white"
                        android:gravity="center"
                        android:background="@drawable/getcode_shape"
                        android:text="获取验证码"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginRight="26dp"
                    android:layout_marginLeft="26dp"
                    android:background="@color/text_gray"/>
                <EditText
                    android:id="@+id/findpass_new"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"

                    android:inputType="textPassword"
                    android:textSize="14sp"
                    android:layout_marginLeft="26dp"
                    android:textColorHint="@color/hint_color"
                    android:hint="新密码"
                    android:background="@null"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginRight="26dp"
                    android:layout_marginLeft="26dp"
                    android:background="@color/text_gray"/>
                <EditText
                    android:id="@+id/findpass_new2"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"

                    android:inputType="textPassword"
                    android:textCursorDrawable="@null"
                    android:textSize="14sp"
                    android:layout_marginLeft="26dp"
                    android:textColorHint="@color/hint_color"
                    android:hint="确认密码"
                    android:background="@null"/>

            </LinearLayout>
            <TextView
                android:id="@+id/findpass_sure"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="24dp"
                android:gravity="center"
                android:background="@drawable/red_shape"
                android:text="提交"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
