<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beijing"
    android:orientation="vertical">

    <include layout="@layout/head_item"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_marginTop="23dp"
        android:layout_marginLeft="14dp"
        android:text="绑定银行卡需要短信验证，短信已发送至手机："/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="14dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/user_phonenumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="151****4524"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"

            android:text=",请按提示操作。"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:paddingRight="14dp"
        android:paddingLeft="14dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/verify_edittext"
            android:layout_width="168dp"
            android:layout_height="match_parent"
            android:background="@drawable/edito_layout"
            android:textSize="16sp"
            android:inputType="number"
            android:hint="填写验证码"
            android:textColorHint="@color/hint_color"
            />
        <TextView
            android:id="@+id/verify_getcode"
            android:layout_width="97dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="13sp"
            android:background="@drawable/getcode_shape"
            android:textColor="@color/white"
            android:text="获取验证码"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/addbankcard_finsh"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/red_shape"
        android:textSize="18sp"

        android:textColor="@color/white"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="18dp"
        android:gravity="center"
        android:text="完成"/>


</LinearLayout>
