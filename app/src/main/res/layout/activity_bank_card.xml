<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beijing"
    android:orientation="vertical">

    <include layout="@layout/head_item"/>


    <money.com.gettingmoney.weiget.ListSlideView
        android:id="@+id/bankcard_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:divider="@color/text_gray"
        android:dividerHeight="0.5dp"
        app:mode="right"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="11dp"
        android:background="@color/beijing"/>
    <RelativeLayout
        android:id="@+id/addbankcard_layout"
        android:layout_width="match_parent"
        android:background="@drawable/selector_layout"
        android:layout_height="44dp">

        <ImageView
            android:id="@+id/addimg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:src="@mipmap/jiahao"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_toRightOf="@id/addimg"
            android:layout_centerVertical="true"
            android:layout_marginLeft="11dp"
            android:text="添加银行卡"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="14dp"
            android:src="@mipmap/me_jian"/>
    </RelativeLayout>
</LinearLayout>
