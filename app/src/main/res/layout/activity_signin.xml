<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/beijing"
            android:orientation="vertical"
          >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginTop="10dp"
                android:orientation="vertical">



                <EditText
                    android:id="@+id/passw_phone"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="14dp"
                    android:inputType="phone"
                    android:textSize="14sp"
                    android:textColorHint="@color/hint_color"
                    android:hint="请输入您的手机号码"
                    android:textCursorDrawable="@null"
                    android:background="@null"
                    android:maxLength="11"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/text_gray"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginRight="14dp"
                    android:orientation="horizontal">
                    <EditText
                        android:id="@+id/regiest_code"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:inputType="textPassword"
                        android:textSize="14sp"
                        android:layout_marginLeft="14dp"
                        android:textColorHint="@color/hint_color"
                        android:textCursorDrawable="@null"
                        android:hint="验证码"
                        android:background="@null"
                        android:maxLength="6"

                        />
                    <TextView
                        android:id="@+id/get_code"
                        android:layout_width="80dp"
                        android:layout_margin="5dp"
                        android:layout_height="match_parent"
                        android:textSize="13sp"

                        android:textColor="@android:color/white"
                        android:gravity="center"
                        android:background="@drawable/getcode_shape"
                        android:text="获取验证码"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/text_gray"/>
                <EditText
                    android:id="@+id/passw_new1"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"

                    android:inputType="textPassword"
                    android:textSize="14sp"
                    android:layout_marginLeft="14dp"
                    android:textColorHint="@color/hint_color"
                    android:hint="输入密码"
                    android:background="@null"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/text_gray"/>
                <EditText
                    android:id="@+id/passw_new2"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"

                    android:inputType="textPassword"
                    android:textCursorDrawable="@null"
                    android:textSize="14sp"
                    android:layout_marginLeft="14dp"
                    android:textColorHint="@color/hint_color"
                    android:hint="确认密码"
                    android:background="@null"/>

            </LinearLayout>
            <TextView
                android:id="@+id/siagnin_sure"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="24dp"
                android:gravity="center"
                android:background="@drawable/red_shape"
                android:text="完成注册"/>
        </LinearLayout>
    </ScrollView>

    <include layout="@layout/redhead_item"/>

</LinearLayout>
