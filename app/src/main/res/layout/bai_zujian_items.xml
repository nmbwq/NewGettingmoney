<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="81dp"
    android:layout_height="81dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/bai_home_kuang"
        >

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/im_zujian_photo"
            android:layout_width="50dp"
            android:layout_height="50dp"
           android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            android:layout_marginTop="5dp"
            android:name=".widget.Fresco"
            app:failureImage="@mipmap/bai_jia"
            app:failureImageScaleType="centerInside"
            />
        
        <TextView
            android:id="@+id/im_zujian_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="指数角斗场"
            android:layout_below="@+id/im_zujian_photo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            style="@style/_383838_font_12sp"
            />
    </RelativeLayout>
</LinearLayout>
